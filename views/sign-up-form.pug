extends layout 

block content
  div(class='row justify-content-center')
    form(class='col-md-8 col-lg-6 row')
      div(class='row mb-3')
        label(class='col-form-label col-sm-2' for='name') Name: 
        div(class='col-sm-10')
          input(class='form-control' type='text' name='name' id='name' required)
      div(class='row mb-3')
        label(class='col-form-label col-sm-2' for='password') Password: 
        div(class='col-sm-10')
          input(class='form-control' type='password' name='password' id='password' required)
      div(class='row mb-3')
        label(class='col-form-label col-sm-2' for='confirm') Confirm: 
        div(class='col-sm-10')
          input(class='form-control' type='password' name='confirm' id='confirm' required)
      div
        button(class='btn btn-success' type='submit') Sign up